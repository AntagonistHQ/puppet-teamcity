#!/bin/sh
### BEGIN INIT INFO
# Provides:          <%= @service_description %>
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start build agent daemon at boot time
# Description:       Enable service provided by daemon.
### END INIT INFO

# Source function library.
. /etc/rc.d/init.d/functions

#Provide the correct user name:
USER="teamcity"
HOME=/var/lib/teamcity
TEAMCITY_HOME=/var/lib/teamcity
TEAMCITY_LOGS=/opt/teamcity/logs
TEAMCITY_DATA_PATH=/var/lib/teamcity
PID_FILE=/var/run/teamcity/<%= @agent_name %>
JAVA_HOME=
export PID_FILE

case "$1" in
start)
  runuser $USER -c "<%= @start_command %>"
;;
stop)
  runuser $USER -c "<%= @stop_command %>"
;;
restart)
  runuser $USER -c "<%= @kill_command %>"
  runuser $USER -c "<%= @start_command %>"
;;
  status)
  status -p $PID_FILE <%= @agent_name %>
;;
*)
  echo "usage start/stop"
  exit 1
 ;;

esac

exit $?
